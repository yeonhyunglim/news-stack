<%- include('includes/header'); -%>
<%- include('includes/nav'); -%>

<div class="container">
  <form method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="inputTitle">Category</label>
      <select class="custom-select" name="category">
        <option>Select category</option>
        <% for (var i=0; i < category.length; i++) { %>
          <option value="<%= category[i].id %>"><%= category[i].title %></option>
        <% } %>
      </select>
    </div>

    <div class="form-group">
      <label for="inputTitle">Title</label>
      <input type="text" name="title" class="form-control" id="inputTitle" aria-describedby="inputTitle" placeholder="Enter title">
      <small id="titleHelp" class="form-text text-muted">기사의 제목을 입력해주세요.</small>
    </div>
    <div class="form-group">
      <label for="inputDesc">Description</label>
      <textarea name="desc" rows="8" cols="80" class="form-control" id="inputDesc"></textarea>
      <small id="descHelp" class="form-text text-muted">내용을 입력해주세요.</small>
    </div>
    <div class="form-group">
      <label for="inputTitle">Author</label>
      <input type="text" name="author" class="form-control" id="inputAuthor" aria-describedby="inputAuthor" placeholder="Enter author">
      <small id="authorHelp" class="form-text text-muted">기자의 이름을 입력해주세요. </small>
    </div>
    <div class="form-group">
      <label for="inputUpload">Photo</label>
      <input type="file" name="upload"  id="inputUpload" aria-describedby="inputUpload">
      <small id="uploadHelp" class="form-text text-muted">사진을 업로드 해주세요. </small>
    </div>
    <button type="submit" class="btn btn-primary">작성하기</button>
    <a href="/news" class="btn btn-secondary">취소</a>
  </form>
</div>
<%- include('includes/footer'); -%>
